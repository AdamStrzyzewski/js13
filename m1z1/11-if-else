// if else

let cost = 15
// just if
// if (cost === 0) {
//   console.log("service is free")
// }

// if...else
// if (cost === 0) {
//   console.log("service is free")
// } else {
//   console.log("service is paid")
// }

// if...elseif
if (cost === 0) {
  console.log("service is free")
} else if (cost <= 10) {
  console.log("this service is cheap")
} else if (cost > 10 && cost < 100) {
  console.log("this service is somewhat expensive")
} else {
  console.log("this service is expensive")
}