// object methods 

function createBook(title, author) {
  return {
    title,
    author,
    setTitle(title) {
      this.title = title
    }
  }
}

const book = createBook("Wiedźmin", "Andrzej Sapkowski")
const book2 = createBook("50 Shades of Grey", "E. L. James")

// {
